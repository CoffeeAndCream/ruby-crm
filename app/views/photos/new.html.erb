<div class="container">
  <div class="col-md-6 col-md-offset-3 info-card">
    <h1>New Photos</h1>
    <%= bootstrap_form_for lead_upload_photos_path(@lead), :html => { multipart: true } do |f| %>
      <%= f.file_field :images, multiple: true, accept: "image/jpeg, image/jpg, image/gif, image/png", required: 'true' %>
      <br>
      <%= f.submit 'Submit', class: 'btn btn-primary btn-md' %>
      <%= link_to 'Cancel', lead_path(@lead), class: 'btn btn-md btn-danger'  %>
    <% end %>
  </div>
</div>
