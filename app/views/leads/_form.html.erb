<div style="margin-left: 100px">

<div class="row">
  <%= bootstrap_form_for(@lead) do |f| %>
    <div class="col-md-5">
      <%= f.text_field :first_name, :required => true %>
    </div>
    <div class="col-md-5">
      <%= f.text_field :last_name, :required => true %>
    </div>
</div>
  <div class="row">
      <div class="col-md-5">
        <%= f.text_field :phone, :required => true %>
      </div>
      <div class="col-md-5">
        <%= f.text_field :email %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
      </div>
      <div class="col-md-3">
        <%= f.text_field :address %>
      </div>
      <div class="col-md-3">
        <%= f.text_field :city %>
      </div>
      <div class="col-md-2">
        <%= f.select :state, options_for_select(us_states), {:selected => "WI"} %>
      </div>
      <div class="col-md-2">
        <%= f.text_field :zip %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-10">
      </div>
      <div class="col-md-10">
        <% unless !Service.any? %>
        <%= f.collection_check_boxes(:services, Service.all.where.not(:name => nil), :id, :name, :label => "Services") %>
        <% end %>
      </div>
      <div class="col-md-5">
        <% unless !User.any? %>
        <%= f.collection_select(:user_id, User.all.where.not(:first_name => nil), :id, :fullname, :label => "Assigned to", :required => true) %>
        <% end %>
      </div>
      <div class="col-md-5">
      </div>
      <div class="col-md-10">
        <% unless !Source.any? %>
        <%= f.collection_select(:source, Source.all, :source_type, :source_type, :label => "Sources", :placeholder => 'Online, phone, advertisement, a friend, etc.') %>
        <% end %>
      </div>
    </div>
      <%= f.submit "Submit", :class => "btn btn-success"  %>
    <% end %>
    </div>
  </div>
