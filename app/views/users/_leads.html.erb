<div class="container info-card"  style="margin-top: -10px">
  <i class="material-icons" style="font-size: 36px">people</i>
  <div id="lead-tracking-table">
  <div class="row">
    <div class="col-md-10 col-md-offset-1">
      <h2>All Leads</h2>
      <br>
      <!--<div class="col-lg-12" id="search-background">
        <h5 class="container hide-on-mobile"  id="search-icon"><span class="glyphicon glyphicon-search"></span> Advanced Search</h5>
        <%= render '/users/search_form' %>
      </div>
    -->
      <div id="all-leads-table">
        <table class="table table-hover table-bordered table-striped table-responsive">
          <thead>
            <th>Name</th>
            <th>Address</th>
            <th>Phone Number</th>
            <th>Services</th>
            <th>Status</th>
          </thead>
          <tbody>
            <% @leads.each do |lead| %>
              <tr>
                <td><%= link_to lead.fullname, lead_path(lead) %></td>
                <td><%= lead.address %>, <%= lead.city %>, <%= lead.state %> <%= lead.zip %></td>
                <td><%= number_to_phone(lead.phonenumber,  area_code: true) %></td>
                <td><%= (lead.services.reject(&:empty?).map { |i| Service.find_by_id(i).name }).join(', ') %></td>
                <td id="all-leads-tasks">
                  <% unless lead.lead_task.nil? %>
                    <%= form_for lead, remote: true, url: lead_lead_task_path(lead) do |f| %>
                      <%= f.select(:lead_task, options_for_select(["NG", "Rehash", "Sold"], lead.lead_task), {hide_label: true},
                          {class: 'lead-task-dropdowns', onchange: "$(this).closest('form').trigger('submit');$('div#all-leads-table-rows').load(document.URL +  ' div#all-leads-table-rows');if(this.value === 'Rehash'){
                              $('#all-leads-table-rows').append('#{ j render partial: "users/task", locals: {lead: lead} }')
                            };"}) %>
                    <% end %>
                  <% else %>
                    No status
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
          <%= will_paginate @leads %>
        </div>
      </div>
    </div>
  </div>
</div>
