<%= bootstrap_form_for(@user) do |f| %>
<div class="row">
  <div class="col-md-6">
    <%= f.text_field :first_name %>
  </div>
  <div class="col-md-6">
    <%= f.text_field :last_name %>
  </div>
</div>
<div class="row">
  <div class="col-md-12">
    <%= f.text_field :email %>
  </div>
</div>
  <%= f.submit "Submit", :class => 'btn btn-primary' %>
<% end %>
