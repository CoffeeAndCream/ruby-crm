<table class="table table-hover table-striped pretty shadow-effect-1">
    <thead class="thead-inverse">
      <tr>
        <th><%= sortable "first_name", "First Name" %></th>
        <th><%= sortable "last_name", "Last Name" %></th>
        <th>Phone Number</th>
        <th>Address</th>
        <th>Salesperson</th>
        <th><%= sortable "created_at", "Date Created" %></th>
      </tr>
    </thead>
    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%=link_to customer.first_name, customer%></td>
        <td><%=link_to customer.last_name, customer%></td>
        <td>
          <% unless customer.phone.nil? %>
          <%= number_to_phone(customer.phonenumber, area_code: true)%>
          <% end %>
        </td>
        <td>
          <% unless customer.address.nil? %>
            <%= customer.address %>, <%= customer.city %>
          <% end %>
        </td>
        <% unless User.find_by_id(customer.user_id).nil? %>
          <td><%= User.find_by_id(customer.user_id).fullname %></td>
        <% else %>
          <td></td>
        <% end %>
        <td scope="row"><%=customer.created_at.strftime("%m/%d/%y")%></td>
      </tr>
      <% end %>
    </tbody>
  </table>

<script>
$('#search-icon').click(function() {
    $('#advanced-search-bar').slideToggle(300);
});
</script>
