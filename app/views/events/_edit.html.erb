<div class="modal fade" id="edit_event">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" style="float:left">Edit Event</h4>
        <% unless @event.lead_id.nil? %>
          <%= link_to 'Go to Lead', lead_path(Lead.find_by_id(@event.lead_id)), class: 'btn btn-info btn-xs', style: 'float:left; margin-left: 20px;margin-top: 1px;' %>
        <% end %>
      </div>
      <div class="modal-body">
        <%= render 'form', event: @event %>
      </div>
    </div>
  </div>
</div>
